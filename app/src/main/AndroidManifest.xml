<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dualion.power_strip" >

    <!--  Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/plugs"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name=".PowerStripApp">
        <activity
            android:name="com.dualion.power_strip.view.LoginActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dualion.power_strip.view.MainActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="com.dualion.power_strip.view.SettingsActivity"
            android:label="@string/action_settings" >
        </activity>
        <activity
            android:name="com.dualion.power_strip.view.DatesActivity"
            android:label="@string/action_dates"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
