<resources>

	<style name="ButtonDualionTheme" parent="android:Widget.Holo.Light.Button">
		<item name="android:background">@drawable/dualiontheme_btn_default_holo_light</item>
		<item name="android:textColor">@drawable/dualiontheme_btn_colortext_holo_light</item>
		<item name="android:shadowColor">#F000</item>
		<item name="android:shadowDx">0</item>
		<item name="android:shadowDy">-1</item>
		<item name="android:shadowRadius">0.2</item>
		<item name="android:buttonStyle">?android:textAppearanceSmall</item>
	</style>

	<style name="ImageButtonDualionTheme" parent="android:Widget.Holo.Light.ImageButton">
		<item name="android:background">@drawable/dualiontheme_btn_default_holo_light</item>
		<item name="android:textColor">@drawable/dualiontheme_btn_colortext_holo_light</item>
	</style>


	<style name="AutoCompleteTextViewDualionTheme" parent="android:Widget.Holo.Light.AutoCompleteTextView">
		<item name="android:dropDownSelector">@drawable/dualiontheme_list_selector_holo_light</item>
		<item name="android:background">@drawable/dualiontheme_edit_text_holo_light</item>
	</style>

	<style name="SpinnerDualionTheme" parent="android:Widget.Holo.Light.Spinner">
		<item name="android:background">@drawable/dualiontheme_spinner_background_holo_light</item>
		<item name="android:dropDownSelector">@drawable/dualiontheme_list_selector_holo_light</item>
	</style>

	<style name="TabDualionTheme">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:paddingLeft">16dip</item>
		<item name="android:paddingRight">16dip</item>
		<item name="android:background">@drawable/dualiontheme_tab_indicator_holo</item>
		<item name="android:layout_width">0dip</item>
		<item name="android:layout_weight">1</item>
		<item name="android:minWidth">80dip</item>
		<item name="android:textAppearance">@style/TabTextDualionTheme</item>
	</style>

	<style name="TabTextDualionTheme">
		<item name="android:textColor">#000000</item>
		<item name="android:textSize">12sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textAllCaps">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:maxLines">2</item>
		<item name="android:maxWidth">180dip</item>
	</style>

	<style name="ProgressBarDualionTheme" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
		<item name="android:progressDrawable">@drawable/dualiontheme_progress_horizontal_holo_light</item>
		<item name="android:indeterminateDrawable">@drawable/dualiontheme_progress_indeterminate_horizontal_holo_light</item>
	</style>

	<style name="SeekBarDualionTheme" parent="android:Widget.Holo.Light.SeekBar">
		<item name="android:progressDrawable">@drawable/dualiontheme_scrubber_progress_horizontal_holo_light</item>
		<item name="android:indeterminateDrawable">@drawable/dualiontheme_scrubber_progress_horizontal_holo_light</item>
		<item name="android:thumb">@drawable/dualiontheme_scrubber_control_selector_holo_light</item>
	</style>

	<style name="RatingBarDualionTheme" parent="android:Widget.Holo.Light.RatingBar">
		<item name="android:progressDrawable">@drawable/dualiontheme_ratingbar_full_holo_light</item>
		<item name="android:indeterminateDrawable">@drawable/dualiontheme_ratingbar_full_holo_light</item>
	</style>

	<style name="RatingBarBigDualionTheme" parent="android:Widget.Holo.Light.RatingBar.Indicator">
		<item name="android:progressDrawable">@drawable/dualiontheme_ratingbar_holo_light</item>
		<item name="android:indeterminateDrawable">@drawable/dualiontheme_ratingbar_holo_light</item>
	</style>

	<style name="RatingBarSmallDualionTheme" parent="android:Widget.Holo.Light.RatingBar.Small">
		<item name="android:progressDrawable">@drawable/dualiontheme_ratingbar_small_holo_light</item>
		<item name="android:indeterminateDrawable">@drawable/dualiontheme_ratingbar_small_holo_light</item>
	</style>

	<style name="ToggleDualionTheme" parent="android:Widget.Holo.Light.Button.Toggle">
		<item name="android:background">@drawable/dualiontheme_btn_toggle_holo_light</item>
	</style>

</resources>
